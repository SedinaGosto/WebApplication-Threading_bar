@model WebApplication6.ViewModels.LoginVM
@{
    ViewData["Title"] = "View";
    Layout = null;
     string error_poruka = (string)TempData["error_poruka"];

}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Threading bar "Lejla Habibija"</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_lyout/Login_v18/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_lyout/Login_v18/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_lyout/Login_v18/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_lyout/Login_v18/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_lyout/Login_v18/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_lyout/Login_v18/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_lyout/Login_v18/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_lyout/Login_v18/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Login_lyout/Login_v18/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Login_lyout/Login_v18/css/main.css">
    <!--===============================================================================================-->
</head>
<body style="background-color:black">


    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">

                <form class="login100-form validate-form" asp-action="Login">

                    <h1  style="font-size:3vw;font-family:'Vladimir Script';margin-left:0px;color:gray">Threading bar "Lejla Habibija"</h1>
                    <hr />

                    <div>
                        @if (error_poruka != null)
                        {
                            <br />
                            <div class="alert alert-danger">
                                @error_poruka
                            </div>
                        }
                    </div>
                    @*<span class="login100-form-title p-b-43">
            Login to continue
        </span>*@


                    <div class="wrap-input100 validate-input" data-validate="Username is required">
                        <input class="input100" type="text" asp-for="username">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Username</span>
                        <span asp-validation-for="username" class="text-danger"></span>

                    </div>


                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" asp-for="password">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Password</span>

                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>

                    <div class="flex-sb-m w-full p-t-3 p-b-32">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" asp-for="ZapamtiPassword">
                            <label class="label-checkbox100" for="ckb1">
                                Remember me
                            </label>

                        </div>

                        <div>
                            <a href="#" class="txt1">
                                Forgot Password?
                            </a>
                        </div>
                    </div>


                    <div class="container-login100-form-btn" style="background-color:darkgray;border-radius:20px;color:white">

                        <input type="submit" class="login100-form-btn" value="Login" style="background-color:darkgray;color:white" />
                    </div>
                    <hr />
                    <div class="container-login100-form-btn" style="background-color:darkgray;border-radius:20px;color:white">

                        <a asp-controller="Autentifikacija" asp-action="Registracija" class="login100-form-btn"  style="background-color:darkgray;color:white">Sign up</a>
                    </div>


                    <div class="text-center p-t-46 p-b-20">
                        <span class="txt2">
                            or sign up using
                        </span>
                    </div>

                    <div class="login100-form-social flex-c-m">
                        <a href="#" class="login100-form-social-item flex-c-m bg1 m-r-5">
                            <i class="fa fa-facebook-f" aria-hidden="true"></i>
                        </a>

                        <a href="#" class="login100-form-social-item flex-c-m bg2 m-r-5">
                            <i class="fa fa-twitter" aria-hidden="true"></i>
                        </a><br />

                    </div>

                </form>

                <div class="login100-more" style="background-color:lightgray">
                    <img  src="https://i.pinimg.com/originals/ca/37/56/ca37562bf7b989fa454e795c3f90b037.jpg" style="width:100%;height:100%">

                </div>
            </div>
        </div>
    </div>





    <!--===============================================================================================-->
    <script src="~/Login_lyout/Login_v18/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_lyout/Login_v18/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_lyout/Login_v18/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Login_lyout/Login_v18/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_lyout/Login_v18/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_lyout/Login_v18/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Login_lyout/Login_v18/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_lyout/Login_v18/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Login_lyout/Login_v18/js/main.js"></script>

</body>
</html>