@using WebApplication6.ViewModels
@model OcjenaDodajVM
@{
    ViewData["Title"] = "Dodaj";
    Layout = "_Layout1";
}

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"> Pocetna </li>

        <li class="breadcrumb-item ">

            Recenzije
        </li>
        <li class="breadcrumb-item ">

            Komentari
        </li>
        <li class="breadcrumb-item active">

          Nova ocjena 
        </li>
    </ol>
<hr />
<style>
    input[type=submit] {
        width: 80%;
        color: white;
        padding: 10px 15px;
        margin-left: 10%;
        margin-bottom: 1%;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .formDiv {
        border: 1px solid white;
        padding: 3%;
        border-radius: 10px;
        background-color: white;
        margin: 10%;
        margin-top: 0%;
        margin-bottom: 3%;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
</style>
<div class="formDiv">
    <form asp-action="Snimi" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="KlijentId" hidden />
        <input asp-for="KorisnkId" hidden />
        <div class="form-group">
            <label>Korisnik</label>
            <input asp-for="Korisnik" class="form-control" readonly />

        </div>

        <div class="form-group">
            <label>Klijent</label>
            <input asp-for="Klijent" class="form-control" readonly />


        </div>
        <div class="form-group">
            <label>Datum </label>
            <input asp-for="DatumOcjenjivanja" class="form-control"  readonly/>


        </div>
        <div class="form-group">
            <label>Ocjena</label>
            <span style="font-size:12px">(Ocjena treba biti u rasponu od 1-5)</span>
            <input asp-for="OcjenaInt" class="form-control" type="number" min="1" max="5" oninvalid="this.setCustomValidity('Ocjena treba biti u rasponu od 1-5')"
                   onchange="this.setCustomValidity('')" />


        </div>



        <input type="submit" value="Dodaj" class="btn btn-secondary" />

    </form>
</div>
