
@using WebApplication6.ViewModels
@model TerminDodajVM
@{
    ViewData["Title"] = "Dodaj";
    Layout = "_Layout";
}
@if (Model.TerminId != 0)
{
    <h6 style="text-align:center">Uredi informacije o terminu</h6>
    Layout = null;

}
else
{
    <h5>Dodaj novi termin</h5>


}
<hr />
<style>
    input[type=submit] {
        width: 80%;
        color: white;
        padding: 10px 15px;
        margin-left: 10%;
        margin-bottom: 1%;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .formDiv {
        border: 1px solid white;
        padding: 3%;
        border-radius: 10px;
        background-color: white;
        margin: 10%;
        margin-top: 0%;
        margin-bottom: 3%;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
</style>
<head>
   
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<div class="formDiv">
    <form asp-action="Snimi" ajax-poziv="da" ajax-rezultat="ajaxDiv" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="TerminId" hidden />

        <div class="form-group">
            <label>Uposlenik</label>
            <select asp-items="Model.Uposlenici" asp-for="UposlenikID" class="form-control"></select>
            <br />
        </div>
        <div class="form-group">

            <label>Vrijeme termina</label>
            <input asp-for="VrijemeTermina" class="form-control" />
            <span asp-validation-for="VrijemeTermina"></span>
        </div>




        <input type="submit" value="Snimi" class="btn btn-secondary" />
    </form>
</div>


