@using WebApplication6.ViewModels
@model TretmanUrediVM
@{
    ViewData["Title"] = "Uredi";
       Layout = "_Layout";
}

    <h6 style="text-align:center">Uredi informacije o tretmanu</h6>
<hr />

    <style>
        input[type=submit] {
            width: 80%;
            color: white;
            padding: 10px 15px;
            margin-left: 10%;
            margin-bottom: 1%;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .formDiv {
            border: 1px solid white;
            padding: 3%;
            border-radius: 10px;
            background-color: white;
            margin: 10%;
            margin-top: 0%;
            margin-bottom: 3%;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }
    </style>
    <div class="formDiv">
        <form action="/Tretman/Spasi" method="post">
            <input asp-for="TretmanID" hidden />
            <div class="form-group">
                <label>Naziv</label>
                <input asp-for="Naziv" class="form-control" />
            </div>

            <div class="form-group">
                <label>Cijena</label>
                <input asp-for="Cijena" class="form-control" /> KM
            </div>

            <input type="submit" value="Snimi" class="btn btn-secondary" />
        </form>
    </div>

