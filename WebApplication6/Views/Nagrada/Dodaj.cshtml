
@using WebApplication6.ViewModels
@model NagradaDodajVM

@{
    ViewData["Title"] = "Dodaj";
       Layout = null;
}
<head>
    <script src="~/jsFIT.js"></script>

</head>
    <style>
        input[type=submit] {
            width: 80%;
            color: white;
            padding: 10px 15px;
            margin-left: 10%;
            margin-bottom: 1%;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .formDiv {
            border: 1px solid white;
            padding: 3%;
            border-radius: 10px;
            background-color: white;
            margin: 10%;
            margin-top: 0%;
            margin-bottom: 3%;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }
    </style>
<h6 style="text-align:center">Nova nagrada</h6>
<hr />
<div class="formDiv">
    <form asp-action="Snimi" method="post" enctype="multipart/form-data" ajax-poziv="da" ajax-rezultat="ajaxDiv">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input asp-for="NagradaID" type="hidden" />
            <label>Naziv</label>
            <input asp-for="Naziv" class="form-control" />
            <span asp-validation-for="Naziv" style="color:red"></span>
        </div>

        <div class="form-group row" style="width:25%">
            <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose File...</label>
                </div>
            </div>
        </div>


        <input type="submit" class="btn btn-secondary" value="Snimi" />
    </form>
    </div>

<script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
</script>



