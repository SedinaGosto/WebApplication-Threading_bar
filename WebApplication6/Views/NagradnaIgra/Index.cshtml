@using WebApplication6.ViewModels
@model NagradnaIgraIndexVM

@{
    ViewData["Title"] = "Index";
    int brojac = 0;
    Layout = "_Layout";
}
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"> Pocetna </li>

    <li class="breadcrumb-item active">

        Nagradne igre
    </li>
</ol>


    <table class="table table-bordered dataTable" id="dataTable">
        <thead>
            <tr>
              
                <th>Nagrada</th>
                <th>Slika</th>
                <th>Evidentirao nagradu</th>
                <th>Osnivac</th>
                <th>Akcija</th>
            </tr>


        </thead>
        <tbody>
            @foreach (var x in Model.rows)
            {
                brojac++;
                <tr>

                
                    <td>@x.Nagrada</td>
                    <td>   <img src="@x.Slika" style="width:35%"></td>
                    <td>@x.Administrator</td>
                    <td>@x.Klijent</td>


                    <td>
                        <a asp-controller="NagradnaIgra" asp-action="Obrisi" asp-route-id="@x.NagradnaIgraID" class="btn btn-outline-danger"><i class="fas fa-trash-restore-alt"></i> Obrisi</a>
                        <a asp-controller="NagradnaIgra" asp-action="Dodaj" asp-route-id="@x.NagradnaIgraID" class="btn btn-outline-info"><i class="far fa-edit"></i>Uredi</a>
                    </td>



                </tr>

            }



        </tbody>



    </table>
<hr />


<a asp-controller="NagradnaIgra" asp-action="Dodaj" class="btn btn-secondary" style="float:right;margin-bottom:1%"><i class="fas fa-gifts"></i> Nova nagradna igra</a>




