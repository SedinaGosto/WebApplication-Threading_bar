@using WebApplication6.ViewModels
@model LozinkaVM
@{
    ViewData["Title"] = "PromijeniLozinku";
    Layout = "_Layout1";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"> Pocetna </li>
 
    <li class="breadcrumb-item active">

    Promijeni lozinku</li>
</ol>

<style>
    input[type=submit] {
        width: 80%;
        color: white;
        padding: 10px 15px;
        margin-left: 10%;
        margin-bottom: 1%;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .formDiv {
        border: 1px solid white;
        padding: 3%;
        border-radius: 10px;
        background-color: white;
        margin: 10%;
        margin-top: 0%;
        margin-bottom: 3%;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
</style>

<hr />
<div class="formDiv">
    <form asp-action="Promijena" method="post" enctype="multipart/form-data" ajax-poziv="da" ajax-rezultat="ajaxDiv">
        @Html.AntiForgeryToken()
        <div class="form-group">

            <label>Nova lozinka</label>
            <input asp-for="NovaLozinka" class="form-control" required       oninvalid="this.setCustomValidity('Polje je obavezno!')" 
onchange="this.setCustomValidity('')"/>

        </div>

        <div class="form-group">

            <label>Potvrda lozinke</label>
            <input asp-for="PotvrdaLozinke" class="form-control" required       oninvalid="this.setCustomValidity('Polje je obavezno!')" 
onchange="this.setCustomValidity('')"/>

        </div>


        <input type="submit" class="btn btn-secondary" value="Snimi" />
    </form>
</div>

<script>
    $(document).ready(function () {
        $('.custom-file-input').on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
        });
    });
</script>