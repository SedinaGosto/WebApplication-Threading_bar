@using WebApplication6.ViewModels
@model UposlenikUrediVM
@{
    ViewData["Title"] = "Uredi";
    Layout = "_Layout";

}

<head>
    <script src="~/jsFIT.js"></script>
</head>
<style>
#myImg {
  border-radius: 5px;
  cursor: pointer;
  transition: 0.3s;
}

#myImg:hover {opacity: 0.7;}

/* The Modal (background) */
.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  padding-top: 100px; /* Location of the box */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.9); /* Black w/ opacity */
}

/* Modal Content (image) */
.modal-content {
  margin: auto;
  display: block;
  width: 80%;
  max-width: 700px;
}

/* Caption of Modal Image */
#caption {
  margin: auto;
  display: block;
  width: 80%;
  max-width: 700px;
  text-align: center;
  color: #ccc;
  padding: 10px 0;
  height: 150px;
}

/* Add Animation */
.modal-content, #caption {
  animation-name: zoom;
  animation-duration: 0.6s;
}



/* The Close Button */
.close {
  position: absolute;
  top: 15px;
  right: 35px;
  color: #f1f1f1;
  font-size: 40px;
  font-weight: bold;
  transition: 0.3s;
}

.close:hover,
.close:focus {
  color: #bbb;
  text-decoration: none;
  cursor: pointer;
}


</style>
<h6 style="text-align:center">@Model.Ime @Model.Prezime</h6>
<hr />
<!-- The Modal -->

<form asp-action="Spasi" method="post" enctype="multipart/form-data">
    <input asp-for="KorisnikId" hidden />
  

    <img id="myImg" src="@Model.Slika" style="width:20%;height:10%" />
    <div class="form-group row" style="width:25%">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input">
                <label class="custom-file-label">Promijeni sliku...</label>
            </div>
        </div>
    </div>
    <br />
    <hr />
    <div class="form-group" style="display:inline-block;">
        <label>Ime</label>
        <input asp-for="Ime" class="form-control" />
    </div>

    <div class="form-group" style="display:inline-block">
        <label>Prezime</label>
        <input asp-for="Prezime" class="form-control" />
    </div>
    <div class="form-group" style="display:inline-block">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group" style="display:inline-block">
        <label>Broj telefona</label>
        <input asp-for="Telefon" class="form-control" />
    </div>

    <div class="form-group" style="display:inline-block">
        <label>Korisnicko ime</label>
        <input asp-for="KorisnickoIme" class="form-control" />
    </div>




    <input type="submit" class="btn btn-secondary" value="Snimi podatke" />
</form>
<hr />
   <div id="myModal" class="modal">
        <span class="close">&times;</span>
        <img class="modal-content" id="img01">
        <div id="caption"></div>
    </div>

<div id="ajaxDiv">
    <br />

</div>
<script>

     $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
     });


    $.get("/Termin/TerminiZaUposlenika/@Model.KorisnikId", function (data,status) {
        $("#ajaxDiv").html(data);
    });

 
// Get the modal
var modal = document.getElementById('myModal');

// Get the image and insert it inside the modal - use its "alt" text as a caption
var img = document.getElementById('myImg');
var modalImg = document.getElementById("img01");
var captionText = document.getElementById("caption");
img.onclick = function(){
  modal.style.display = "block";
  modalImg.src = this.src;
  captionText.innerHTML = this.alt;
}

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modal.style.display = "none";
}

</script>