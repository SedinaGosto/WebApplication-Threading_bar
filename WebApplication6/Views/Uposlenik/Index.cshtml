@using WebApplication6.ViewModels
@model UposlenikIndexVM
@{
    ViewData["Title"] = "Index";
}


<head>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"> Pocetna </li>

    <li class="breadcrumb-item active">

        Uposlenici
    </li>
</ol>

<hr />



<table class="table table-bordered dataTable" id="dataTable">


    <thead>
        <tr>

            <th>Ime </th>
            <th>Prezime</th>
            <th>Telefon</th>
            <th>Email</th>
            <th>Akcija</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model.rows)
        {


            <tr>


                <td>@x.Ime</td>
                <td>@x.Prezime</td>
                <td>@x.Telefon</td>
                <td>@x.Email</td>
                <td>



                    <a asp-controller="Uposlenik" asp-action="Obrisi" asp-route-id="@x.KorisnikId" class="btn btn-outline-danger"><i class="fas fa-trash-restore-alt"></i> Obrisi</a>
                    <a asp-controller="Uposlenik" asp-action="Uredi" asp-route-id="@x.KorisnikId" class="btn btn-outline-info"><i class="far fa-edit"></i>Uredi</a>
                    <a asp-controller="Uposlenik" asp-action="PregledTermina" asp-route-id="@x.KorisnikId" class="btn btn-outline-info"><i class="far fa-calendar-alt"></i>Termini</a>

                </td>
            </tr>





        }
    </tbody>

</table>
<hr />
<a asp-controller="Uposlenik" asp-action="Dodaj" class="btn btn-secondary" style="float:right;margin-bottom:1%"><i class="fas fa-user-nurse"></i> Dodaj uposlenika</a>

