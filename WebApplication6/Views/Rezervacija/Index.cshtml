@using WebApplication6.ViewModels
@model RezervacijaIndexVM

@{
    ViewData["Title"] = "Index";
    string klijent = (string)TempData["Klijent"];
    string error_poruka = (string)TempData["error"];

    Layout = "_Layout1";

}
<head>
    <script src="~/jsFIT.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"> Pocetna </li>

    <li class="breadcrumb-item active">

       Rezervacije
    </li>
</ol>


<hr />
<hr />
@if (klijent == "Odredjeni")
{
    Layout = null;
}
<div>
    @if (error_poruka != null)
    {
        <br />
        <div class="alert alert-danger">
            @error_poruka
        </div>
    }
</div>
<table class="table table-bordered dataTable" id="dataTable">
    <thead>
        <tr>
            <th>Klijent</th>
            <th>Datum rezervacije</th>
            <th>Vrijeme termina</th>
            <th>Tretman</th>

            <th>Akcija</th>
        </tr>


    </thead>
    <tbody>
        @foreach (var x in Model.rows)
        {

            <tr>


                <td>@x.Klijent</td>
                <td>@x.DatumRezervacije</td>
                <td>@x.Termin</td>
                <td>@x.Naziv</td>


                <td>
                    <a asp-controller="Rezervacija" asp-action="Obrisi" asp-route-id="@x.RezervacijaId" class="btn btn-outline-danger"><i class="fas fa-times"></i> Ponisti rezervaciju</a>

                </td>



            </tr>

        }



    </tbody>



</table>
<hr />
<script>

    $(document).ready(function () {

        if ($.fn.dataTable.isDataTable('#dataTable')) {
            table.destroy();

        }
     
    });
</script>

