@using WebApplication6.ViewModels
@model RezervacijaDodajVM
@{
    ViewData["Title"] = "Dodaj";
    Layout = "_Layout1";
}

    <h6 style="text-align:center">Zavrsi rezervaciju</h6>



<hr />
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<style>
    input[type=submit] {
        width: 80%;
        color: white;
        padding: 10px 15px;
        margin-left: 10%;
        margin-bottom: 1%;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .formDiv {
        border: 1px solid white;
        padding: 3%;
        border-radius: 10px;
        background-color: white;
        margin: 10%;
        margin-top: 0%;
        margin-bottom: 3%;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
</style>
<div class="formDiv">
    <form action="/Rezervacija/Snimi" method="post">
        <input asp-for="RezervacijaID" hidden />
        <input asp-for="TerminId" hidden />
        <input asp-for="KlijentId" hidden />


        <div class="form-group">

            <label>Datum rezervacije</label>
            <input type="date" asp-for="DatumRezervacije" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Vrijeme zakazanog termina</label>
            <textarea asp-for="VrijemeTermina" class="form-control" readonly></textarea>
        </div>


        <div class="form-group">
            <label>Klijent: </label>
            <input asp-for="Klijent" readonly class="form-control" />
        </div>

        <div class="form-group">
            <label>Tretman: </label>
            <select asp-items="Model.Tretmani" asp-for="TeretmanId" class="form-control"></select>

        </div>

        <input type="submit" value="Snimi" class="btn btn-secondary" />
    </form>
    </div>

